@model RegisterVM
<form method="post" enctype="multipart/form-data">
    <div class="single-input-item">
        <input asp-for="FullName" placeholder="Full Name" required="">
    </div>
    <div class="single-input-item">
        <input asp-for="Email" placeholder="Enter your Email" required="">
    </div>
    <div class="single-input-item">
        <input asp-for="UserName" placeholder="Enter your Email" required="">
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="single-input-item">
                <input asp-for="Password" placeholder="Enter your Password" required="">
            </div>
        </div>
        <div class="col-lg-6">
            <div class="single-input-item">
                <input asp-for="ConfirmPassword" placeholder="Repeat your Password" required="">
            </div>
        </div>
    </div>
    <div class="single-input-item">
        <button asp-controller="account" asp-action="register" type="submit" class="btn">Register</button>
    </div>
</form>


@section Script{
    <partial name="_ValidationFormScriptPartial">
}
