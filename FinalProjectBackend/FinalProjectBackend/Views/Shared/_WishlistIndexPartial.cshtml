@model List<WishlistVM>
@if (Model?.Count() > 0)
{
<table>
    <thead>
        <tr>
            <th>Image</th>
            <th>Product</th>
            <th>Price</th>
            <th>Purchase</th>
            <th>Remove</th>
        </tr>
    </thead>
    <tbody>
        @foreach (WishlistVM wishlist in Model)
        {
<tr id="row_bavaria-wine">
    <td class="product-thumbnail">
        <a asp-controller="product" asp-action="Detail" asp-route-id="@wishlist.ProductId" asp-route-colorid="@wishlist.ColorId" asp-route-sizeid="@wishlist.SizeId">
            <img src="~/images/products/@wishlist.Image" style="width: 100px;" alt="">
        </a>
    </td>
    <td class="product-name">
        <a href="/products/bavaria-wine">@wishlist.Name</a>
    </td>
    <td class="product-price-cart">
        <span class="amount">$@wishlist.Price</span>
    </td>
    <td class="product-wishlist-cart">
        <a href="/products/bavaria-wine" data-product-varient-id="12570542702703" style="border : 1px solid #e4e4e4" class="dt-sc-btn product-cart viewshopAbutton">Select Options</a>
    </td>
    <td>
        <a asp-controller="wishlist" asp-action="delete" asp-route-AppUserid="@ViewBag.AppUser.Id" asp-route-Prodid="@wishlist.ProductId" class="product-cart removeWishlist">
            <i class="fa fa-trash"></i>
        </a>
    </td>
</tr>
}
    </tbody>
</table> }
else
{
<div class="wish-empty" style="text-align: center;">
    <img src="~/images/empty-cart.jpeg" />
    <h4>Nothing found in wishlist!</h4>
    <a asp-controller="shop" asp-action="index" class="viewshopAbutton">Start Shopping</a>
</div>}