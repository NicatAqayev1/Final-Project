@model MemberUpdateVM
<form asp-action="Edit" asp-controller="Account" method="post" id="loginForm" style="width:auto;">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row" style="display: flex !important">
        <div class="single-input-item col-lg-6">
            <label asp-for="FullName" class="required">First Name</label>
            <input asp-for="FullName" placeholder="First Name">
            <span asp-validation-for="FullName" style="color: #c1001c"></span>
        </div>
        <div class="single-input-item col-lg-6">
            <label asp-for="Email" class="required"></label>
            <input asp-for="Email" placeholder="Email">
            <span asp-validation-for="Email" style="color: #c1001c"></span>
        </div>
        <div class="single-input-item col-lg-6">
            <label asp-for="UserName" class="required"></label>
            <input asp-for="UserName" placeholder="UserName">
            <span asp-validation-for="UserName" style="color: #c1001c"></span>
        </div>
        <div class="single-input-item col-lg-6">
            <label asp-for="Address" class="required"></label>
            <input asp-for="Address" placeholder="Address">
            <span asp-validation-for="Address" style="color: #c1001c"></span>
        </div>
        <div class="single-input-item col-lg-6">
            <label asp-for="PhoneNumber" class="required"></label>
            <input asp-for="PhoneNumber" placeholder="PhoneNumber">
            <span asp-validation-for="PhoneNumber" style="color: #c1001c"></span>
        </div>
        <div class="single-input-item col-lg-6">
            <label asp-for="Country" class="required"></label>
            <input asp-for="Country" placeholder="Country">
            <span asp-validation-for="Country" style="color: #c1001c"></span>
        </div>
        <div class="single-input-item col-lg-6">
            <label asp-for="State" class="required"></label>
            <input asp-for="State" placeholder="State">
            <span asp-validation-for="State" style="color: #c1001c"></span>
        </div>
        <div class="single-input-item col-lg-6">
            <label asp-for="ZipCode" class="required"></label>
            <input asp-for="ZipCode" placeholder="ZipCode">
            <span asp-validation-for="ZipCode" style="color: #c1001c"></span>
        </div>
    </div>

    <fieldset class="fieldset">
        <legend>Password change</legend>
        <div class="single-input-item col-lg-12" style="display: block !important;opacity: 1 !important;">
            <label asp-for="CurrentPassword" style="display: block;opacity: 1;" class="required"></label>
            <input asp-for="CurrentPassword" style="display: block;opacity: 1;" placeholder="CurrentPassword">
            <span asp-validation-for="CurrentPassword" style="color: #c1001c"></span>
        </div>
        <div class="row" style="display: flex;opacity: 1;">
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label asp-for="Password" class="required"></label>
                    <input asp-for="Password" placeholder="Password">
                    <span asp-validation-for="Password" style="color: #c1001c"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label asp-for="ConfirmPassword" class="required"></label>
                    <input asp-for="ConfirmPassword" placeholder="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" style="color: #c1001c"></span>
                </div>
            </div>
        </div>
    </fieldset>
    <div class="single-input-item">
        <button class="check-btn sqr-btn viewshopAbutton" type="submit">Save Changes</button>
    </div>
</form>
@section Script{
    <partial name="_ValidationFormScriptPartial" />
}