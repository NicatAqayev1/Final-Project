@model Review
<form method="post" asp-action="EditReview" asp-controller="product" asp-route-id="@Model.Id">
    <div class="comment-post-box">
        <div class="row">
            <div class="col-6">
                <label for="Message">Comment</label>
                <textarea id="Message" name="Message" placeholder="Write a comment" style="height: 100px; width: 85%;">@Model.Message</textarea>
            </div>
            <div class="col-6">
                <div class="coment-btn">
                    <button class="btn" name="submit">Edit COMMENT</button>
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    $(document).on("click", ".editComment", function (e) {
        e.preventDefault();

        var Message = $("#MessageEdit").val()
        fetch("Edit" + "?Message=" + Message + "&id=" + $(this).attr("data-rid")).then(res => {
            return res.text();
        }).then(data => {
            $(".comments").html(data);
            $("#MessageEdit").val("")
        })
    })
</script>