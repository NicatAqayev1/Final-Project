@model ResetPasswordVM
<div class="mail">
    <div class="container" id="login">
        <div class="row mt-5 login">
            <div class="col-6" style="margin: 0 auto;">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form method="post" class="w-100" id="loginForm">
                    <div class="form-group w-100">
                        <label asp-for="Password" class="mt-3"></label>
                        <input asp-for="Password" class="form-control w-100" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group w-100">
                        <label asp-for="ConfirmPassword" class="mt-3"></label>
                        <input asp-for="ConfirmPassword" class="form-control w-100" />
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3 viewshopAbutton">Change Password</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Script{
    <partial name="_ValidationFormScriptPartial" />
}
