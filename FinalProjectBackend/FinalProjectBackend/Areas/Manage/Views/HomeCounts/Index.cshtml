@model List<HomeCounts>
@{
    int count = 0;
}
<div class="page-wrapper">
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-md-6 col-8 align-self-center">
                <h3 class="page-title mb-0 p-0">Blank Page</h3>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Blank Page</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-md-6 col-4 align-self-center">
                <div class="text-end upgrade-btn">
                    <a asp-area="manage" asp-controller="HomeCounts" asp-action="create"
                       class="btn btn-success d-none d-md-inline-block text-white">
                        Create new slider item
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown"></ul>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Image</th>
                                    <th scope="col">Text</th>
                                    <th scope="col">Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (HomeCounts HomeCounts in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>
                                            <img src="~/images/HomeCounts/@HomeCounts.CountsImage" alt="homepage" style="width: 150px; height:100px;object-fit:cover;" class="dark-logo" />
                                        </td>
                                        <td>
                                            @HomeCounts.CountsText
                                        </td>
                                        <td>
                                            <a asp-action="Detail" asp-controller="HomeCounts" asp-area="manage" asp-route-id="@HomeCounts.Id" class="col-lg-12 btn btn-primary">Detail</a>
                                            <a asp-action="Update" asp-controller="HomeCounts" asp-area="manage" asp-route-id="@HomeCounts.Id" class="col-lg-12 btn btn-warning">Update</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <footer class="footer text-center">
        © 2021 Monster Admin by <a href="https://www.wrappixel.com/">wrappixel.com</a>
    </footer>
    <!-- ============================================================== -->
</div>
