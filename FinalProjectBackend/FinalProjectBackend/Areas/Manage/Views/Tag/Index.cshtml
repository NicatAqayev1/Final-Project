@model IEnumerable<Tag>
@{
    int count = (ViewBag.PageIndex - 1) * 5;
}
<div class="page-wrapper">
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-md-6 col-8 align-self-center">
                <h3 class="page-title mb-0 p-0">Blank Page</h3>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Blank Page</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-md-6 col-4 align-self-center">
                <div class="text-end upgrade-btn">
                    <a asp-area="manage" asp-controller="Tag" asp-action="create"
                       class="btn btn-success d-none d-md-inline-block text-white">
                        Create new Tag
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown"></ul>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Settings</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Tag Tag in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@Tag.Name</td>
                                        <td>
                                            @*<a asp-action="Detail" asp-controller="Tag" asp-area="manage" asp-route-id="@Tag.Id" class="col-lg-2 btn btn-primary">Detail</a>*@
                                            <a asp-action="Update" asp-controller="Tag" asp-area="manage" asp-route-id="@Tag.Id" class="col-lg-2 btn btn-warning">Update</a>
                                            @if (Tag.IsDeleted)
                                            {
                                                <a asp-action="Restore" asp-controller="Tag" asp-area="manage" asp-route-id="@Tag.Id" class="btn col-lg-2 btn-primary">Restore</a>
                                            }
                                            else
                                            {
                                                <a asp-action="Delete" asp-controller="Tag" asp-area="manage" asp-route-id="@Tag.Id" class="col-lg-2 btn btn-danger">Delete</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-lg-12 d-flex justify-content-center">
                    <nav>
                        <ul class="pagination">

                            @if (ViewBag.PageIndex > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="index" asp-route-page="1" aria-label="Previous">
                                        @("<<")
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" asp-action="index" asp-route-page="@(ViewBag.PageIndex-1)" aria-label="Previous">
                                        @("<")
                                    </a>
                                </li>
                                @if (ViewBag.PageIndex == ViewBag.PageCount && ViewBag.PageIndex > 2)
                                {
                                    <li class="page-item"><a class="page-link" asp-action="index" asp-route-page="@(ViewBag.PageIndex-2)">@(ViewBag.PageIndex-2)</a></li>
                                }
                                <li class="page-item"><a class="page-link" asp-action="index" asp-route-page="@(ViewBag.PageIndex-1)">@(ViewBag.PageIndex-1)</a></li>
                            }

                            <li class="page-item active"><a class="page-link" asp-action="index" asp-route-page="@ViewBag.PageIndex">@ViewBag.PageIndex</a></li>

                            @if (ViewBag.PageIndex < ViewBag.PageCount)
                            {
                                <li class="page-item"><a class="page-link" asp-action="index" asp-route-page="@(ViewBag.PageIndex + 1)">@(ViewBag.PageIndex + 1)</a></li>

                                @if (ViewBag.PageIndex == 1 && (ViewBag.PageIndex + 2) < ViewBag.PageCount)
                                {
                                    <li class="page-item"><a class="page-link" asp-action="index" asp-route-page="@(ViewBag.PageIndex+2)">@(ViewBag.PageIndex+2)</a></li>
                                }
                                <li class="page-item">
                                    <a class="page-link" asp-route-page="@(ViewBag.PageIndex + 1)" aria-label="Next">
                                        @(">")
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" asp-action="index" asp-route-page="@ViewBag.PageCount" aria-label="Next">
                                        @(">>")
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <footer class="footer text-center">
        © 2021 Monster Admin by <a href="https://www.wrappixel.com/">wrappixel.com</a>
    </footer>
    <!-- ============================================================== -->
</div>
