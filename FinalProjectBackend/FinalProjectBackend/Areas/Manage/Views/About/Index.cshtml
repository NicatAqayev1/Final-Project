@Model? About
<div class="page-wrapper">
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-md-6 col-8 align-self-center">
                <h3 class="page-title mb-0 p-0">Blank Page</h3>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Blank Page</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-md-6 col-4 align-self-center">
                <div class="text-end upgrade-btn">
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown"></ul>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h2 class="text-center">Intro</h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">IntroImage</th>
                                    <th scope="col">IntroHeader</th>
                                    <th scope="col">IntroText</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <img src="~/images/AboutPage/@Model?.IntroImage" style="width:100px;object-fit:cover;" />
                                    </td>
                                    <td>@Html.Raw(Model?.IntroHeader)</td>
                                    <td>@Html.Raw(Model?.IntroText.Substring(0, 50)) ...</td>
                                </tr>
                            </tbody>
                        </table>
                        <h2 class="text-center">About</h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">AboutWineImage</th>
                                    <th scope="col">AboutWineHeader</th>
                                    <th scope="col">AboutWineText</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <img src="~/images/AboutPage/@Model?.AboutWineImage" style="width:100px;object-fit:cover;" />
                                    </td>
                                    <td>@Html.Raw(Model?.AboutWineHeader)</td>
                                    <td>@Html.Raw(Model?.AboutWineText.Substring(0, 50)) ...</td>
                            </tbody>
                        </table>
                        <h2 class="text-center">Offer</h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">OfferImage</th>
                                    <th scope="col">OfferHeader</th>
                                    <th scope="col">OfferText</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <img src="~/images/AboutPage/@Model?.OfferImage" style="width:100px;object-fit:cover;" />
                                    </td>
                                    <td>@Html.Raw(Model?.OfferHeader)</td>
                                    <td>@Html.Raw(Model?.OfferText.Substring(0, 50)) ...</td>
                                    <td>@Html.Raw(Model?.StaffHEader)</td>
                                </tr>
                            </tbody>
                        </table>
                        <a asp-action="Change" asp-controller="about" asp-area="manage" asp-route-id="@Model?.Id" class="col-lg-12 btn btn-primary">Change</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <footer class="footer text-center">
        © 2021 Monster Admin by <a href="https://www.wrappixel.com/">wrappixel.com</a>
    </footer>
    <!-- ============================================================== -->
</div>
